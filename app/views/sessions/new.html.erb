<h2>Log In</h2>

<%= form_for :session, url: sessions_path do |f| %>
  <div class="form_group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form_group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form_group">
    <%= f.submit 'Log In' %>
  </div>

<% end %>
